# Brazilian Astrology API - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Debug mode (set to false in production)
DEBUG=true

# ==========================================
# EXTERNAL API KEYS
# ==========================================

# GeoNames API (get from https://www.geonames.org/login)
GEONAMES_USERNAME=your_geonames_username

# ==========================================
# SECURITY SETTINGS
# ==========================================

# JWT Secret Key (generate a strong random key for production)
SECRET_KEY=dev-secret-key-change-in-production-this-should-be-long-and-random

# CORS Origins (comma-separated, use * for development)
ALLOWED_HOSTS=localhost,127.0.0.1,api.astrologia.br

# ==========================================
# DATABASE SETTINGS
# ==========================================

# PostgreSQL Connection URL
DATABASE_URL=postgresql://astrology_user:astrology_pass@postgres:5432/astrology_dev

# PostgreSQL Database Name
POSTGRES_DB=astrology_dev

# PostgreSQL Username
POSTGRES_USER=astrology_user

# PostgreSQL Password
POSTGRES_PASSWORD=astrology_pass

# ==========================================
# REDIS SETTINGS
# ==========================================

# Redis URL for caching and sessions
REDIS_URL=redis://redis:6379

# Redis Password (optional, set in production)
REDIS_PASSWORD=

# ==========================================
# MONITORING SETTINGS
# ==========================================

# Grafana Admin User
GRAFANA_ADMIN_USER=admin

# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=admin123

# Prometheus Basic Auth (format: user:encrypted_password)
# Generate with: echo -n 'user:password' | base64
PROMETHEUS_AUTH=YWRtaW46YWRtaW4xMjM=

# ==========================================
# PRODUCTION OVERRIDES
# ==========================================

# Production Database URL (use external managed database)
# DATABASE_URL=postgresql://user:pass@prod-db-host:5432/astrology_prod

# Production Redis URL (use managed Redis)
# REDIS_URL=redis://prod-redis-host:6379

# ==========================================
# OPTIONAL SETTINGS
# ==========================================

# API Rate Limiting (requests per minute per IP)
RATE_LIMIT_REQUESTS=10

# Cache TTL in seconds
CACHE_TTL=3600

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==========================================
# EMAIL SETTINGS (for future features)
# ==========================================

# SMTP Server
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ==========================================
# WEBHOOK SETTINGS
# ==========================================

# Webhook Secret for signing payloads
WEBHOOK_SECRET=your-webhook-secret-here

# ==========================================
# BACKUP SETTINGS
# ==========================================

# Backup Schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Backup Retention (days)
BACKUP_RETENTION_DAYS=30